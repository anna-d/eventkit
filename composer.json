{
    "name": "leoshtika/eventkit",
    "description": "Event application framework",
    "keywords": ["eventkit", "event", "application framework", "yii2"],
    "license": "MIT",
    "authors": [
        {
            "name": "Leonard Shtika",
            "email": "leonard@shtika.info",
            "homepage": "http://leonard.shtika.info"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.6",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "cebe/yii2-gravatar": "*",
        "leoshtika/yii2-nav-sidebar": "*",
        "kartik-v/yii2-widget-datetimepicker": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*",
        "codeception/codeception": "2.1.*",
        "codeception/specify": "*",
        "codeception/verify": "*"
    },
    "autoload": {
        "psr-4": {
            "leoshtika\\eventkit\\": ""
        }
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}
